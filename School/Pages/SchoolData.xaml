<Page x:Class="School.Pages.SchoolData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SchoolData">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="199*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Height="22" Width="90" Content="Удаление" Click="Button_Click" ></Button>
        </StackPanel>
        <DataGrid Grid.Row="1" x:Name="DataGrid" SelectionChanged="DataGrid_SelectionChanged" Grid.RowSpan="2">
        </DataGrid>
    </Grid>
</Page>
